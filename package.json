{
  "name": "figma-design-tokens",
  "version": "6.11.3",
  "description": "Export design tokens from Figma",
  "main": "plugin.js",
  "engines": {
    "node": "~18.20.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gibig/figma-design-tokens.git"
  },
  "scripts": {
    "start": "pnpm exec webpack --mode=development --watch",
    "build": "rm -rf ./dist && pnpm exec webpack --mode=production",
    "build-watch": "pnpm run build -- --watch",
    "test": "pnpm run lint ; pnpm run test:unit ; pnpm run test:integration",
    "test:unit": "jest tests/unit",
    "test:originalTokens": "style-dictionary build --config ./tests/integration/original.config.json",
    "test:standardTokens": "node ./tests/integration/standard.build.js",
    "test:integration": "rm ./tests/integration/data/original.variables.css & rm ./tests/integration/data/standard.variables.css && pnpm run test:originalTokens & pnpm run test:standardTokens && jest tests/integration --coverage=false",
    "lint": "standardx src/**/*.ts src/*.ts | snazzy",
    "lint:fix": "standardx --fix src/**/*.ts src/*.ts | snazzy",
    "examples": "rm -rf ./examples/build && node ./examples/build.js",
    "set-version": "replace-in-files --regex='\\d+\\.\\d+\\.\\d+' --replacement=$npm_package_version src/utilities/version.ts",
    "version": "pnpm run set-version && pnpm run build && git add --all"
  },
  "author": "Lukas Oppermann <oppermann.lukas@gmail.com> (https://lukasoppermann.com)",
  "license": "MIT",
  "devDependencies": {
    "@ctrl/tinycolor": "^3.4.0",
    "@emotion/css": "^11.1.3",
    "@figma/eslint-plugin-figma-plugins": "^0.15.0",
    "@figma/plugin-typings": "^1.106.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^24.0.14",
    "@types/react": "^18.0.13",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "change-case": "^4.1.2",
    "css-loader": "^6.7.1",
    "deepmerge": "^4.2.2",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-typescript": "^0.14.0",
    "figma-plugin-ds": "^1.0.1",
    "fs-extra": "^10.0.0",
    "html-webpack-inline-source-plugin": "^0.0.10",
    "html-webpack-plugin": "^5.5.0",
    "immer": "^9.0.15",
    "jest": "^28.1.1",
    "jest-preset-typescript": "^1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-outside-click-handler": "^1.3.0",
    "replace-in-files-cli": "^2.0.0",
    "snazzy": "^9.0.0",
    "standardx": "^7.0.0",
    "style-dictionary": "^3.0.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.9.5",
    "typescript-bundle": "^1.0.17",
    "typescript-eslint": "^8.18.2",
    "url-loader": "^4.1.1",
    "use-immer": "^0.7.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "global": [
      "jest",
      "test",
      "__html__",
      "parent",
      "onmessage",
      "UIAPI",
      "figma",
      "PluginAPI",
      "PaintStyle",
      "GridStyle",
      "TextStyle",
      "LayoutGrid",
      "FrameNode",
      "SceneNode",
      "PageNode",
      "RectangleNode",
      "ComponentSetNode",
      "ComponentNode",
      "GridLayoutGrid",
      "RowsColsLayoutGrid",
      "EffectStyle",
      "Effect",
      "Paint",
      "Transition",
      "Easing",
      "DirectionalTransition",
      "expect"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "rules": {
      "default-param-last": 0,
      "no-return-assign": 0,
      "brace-style": 0,
      "no-use-before-define": "off",
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "@typescript-eslint/no-use-before-define": "error",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "tests",
      "examples",
      "types",
      "*.config.*"
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "verbose": true,
    "testTimeout": 15000,
    "collectCoverage": true,
    "coverageDirectory": "./tests/unit/coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/tests/integration/!(skip.)*.test.[jt]s?(x)",
      "**/tests/unit/!(skip.)*.test.[jt]s?(x)"
    ],
    "moduleNameMapper": {
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^@utils/(.*)$": "<rootDir>/src/utilities/$1",
      "^@ui/(.*)$": "<rootDir>/src/ui/$1",
      "^@components/(.*)$": "<rootDir>/src/ui/components/$1"
    }
  },
  "dependencies": {
    "es-toolkit": "^1.39.7",
    "lodash-es": "^4.17.21",
    "react-dev-utils": "^12.0.1"
  }
}
